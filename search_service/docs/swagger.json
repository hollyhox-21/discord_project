{
    "swagger": "2.0",
    "info": {
        "description": "Сервис полнотекствого поиска",
        "title": "SearchService",
        "contact": {},
        "version": "0.0.1"
    },
    "basePath": "/api",
    "paths": {
        "/v1/search/server/{server_name}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "search_service"
                ],
                "summary": "Поиск сервера по server_name",
                "operationId": "SearchServer",
                "parameters": [
                    {
                        "type": "string",
                        "description": "server name",
                        "name": "server_name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.SearchServerResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/api.errorResp"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.errorResp"
                        }
                    }
                }
            }
        },
        "/v1/search/user/{nickname}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "search_service"
                ],
                "summary": "Поиск пользователя по nickname",
                "operationId": "SearchUser",
                "parameters": [
                    {
                        "type": "string",
                        "description": "user nickname",
                        "name": "nickname",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.SearchUserResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/api.errorResp"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/api.errorResp"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.SearchServerResponse": {
            "type": "object",
            "properties": {
                "aboutServer": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "serverName": {
                    "type": "string"
                },
                "users": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "api.SearchUserResponse": {
            "type": "object",
            "properties": {
                "aboutUser": {
                    "type": "string"
                },
                "avatarPhotoUrl": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "nickname": {
                    "type": "string"
                }
            }
        },
        "api.errorResp": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        }
    }
}